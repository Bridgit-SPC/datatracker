#!/bin/bash
# Simple, reliable dev restart

pkill -9 -f "python.*ietf_data"
pkill -9 -f "python.*8001"
sleep 2

systemctl --user stop datatracker-dev.service 2>/dev/null
sleep 2

cd /home/ubuntu/datatracker
rm -rf __pycache__ */__pycache__ */*/__pycache__
find . -name "*.pyc" -delete 2>/dev/null

systemctl --user start datatracker-dev.service
sleep 10

systemctl --user status datatracker-dev.service --no-pager | head -5
